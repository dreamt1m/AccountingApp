<Window x:Class="AccountingApp.Client.Views.CreateEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingApp.Client.Views"
        mc:Ignorable="d"
        Loaded="CreateEmployeeWindow_OnLoaded"
        Title="Create Employee" Height="140" Width="268"
>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Name:" Width="50"/>
                <TextBox Name="NameTextBox" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Position:" Width="50"/>
                <ComboBox Name="PositionComboBox" Width="100"/>
            </StackPanel>
            <Button Content="Save" Width="200" Margin="5" HorizontalAlignment="Left" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
